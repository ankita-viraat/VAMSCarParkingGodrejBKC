<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:id="@+id/llMainlogout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="3"
        android:layout_marginTop="@dimen/dim_16">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:orientation="vertical">
        <TextView
            android:id="@+id/tvName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:textAppearance="@style/customMontserratRegular"
            android:textSize="16sp"
            android:text="Siddhesh Prakash Gawde" />

        <TextView
            android:id="@+id/tvCellnumber"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:textAppearance="@style/customMontserratRegular"
            android:textSize="16sp"
            android:text="9773523263" />

        <TextView
            android:id="@+id/tvVehicleNumber"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:textAppearance="@style/customMontserratRegular"
            android:textSize="16sp"
            android:text="Mh 47 GD 6510" />
        <TextView
            android:id="@+id/tvParkLoc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="Parking Loc"
            android:textAppearance="@style/customMontserratRegular"
            android:textSize="16sp" />


        <TextView
            android:id="@+id/tvSubLoc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="Sub Loc"
            android:textAppearance="@style/customMontserratRegular"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tvInTime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:textAppearance="@style/customMontserratRegular"
            android:textSize="16sp"
            android:text="InTime" />

        <TextView
            android:id="@+id/tvCompany"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="Company Name"
            android:textAppearance="@style/customMontserratRegular"
            android:textSize="16sp" />


        <TextView
            android:id="@+id/tvStatus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:textAppearance="@style/customMontserratRegular"
            android:textSize="16sp"
            android:text="Status NA" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="match_parent"
        android:gravity="bottom|end"
        android:orientation="vertical">

        <Button
            android:id="@+id/btnLogoutButton"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="8dp"
            android:background="@color/loginBtn"
            android:textSize="12sp"
            android:text="@string/logout"
            android:textColor="@color/white" />

    </LinearLayout>

    </LinearLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/black"
        android:layout_below="@+id/llMainlogout"
        android:layout_marginTop="@dimen/dim_16"/>

</RelativeLayout>